package BankInheritance;

import java.util.Scanner;

public class BankMain {
	
	public static void main(String[] args) {
		SavingAccount sobj=new SavingAccount(101, "Saving", 90000, "SBI23874692",4.9f);
		CurrentAccount cobj=new CurrentAccount(102, "current", 37364876, "ICICI3875", "dgfskj");
		System.out.println("================Saving Account====================");
		display(sobj);
		
		System.out.println("================Current Account====================");
		display(cobj);
	}
	
	public static Customer create() {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter Customer Id :");
		int custId=sc.nextInt();
		System.out.println("Enter Customer Name :");
		String custName=sc.next();
		System.out.println("==================Address================");
		System.out.println("Enter City :");
		String city=sc.next();
		System.out.println("Enter State :");
		String state=sc.next();
		System.out.println("Enter Pincode :");
		String pincode=sc.next();
		Address add=new Address(city, state, pincode);
		System.out.println("=================Account Details==========");
		System.out.println("Enter Account Number :");
		int accNumber=sc.nextInt();
		System.out.println("Enter Account Type ('saving'/'current') :");
		String accType=sc.next();
		System.out.println("Enter Account Balence :");
		int accBal=sc.nextInt();
		System.out.println("Enter Account ifsc code :");
		String ifscCode=sc.next();
		Account accobj=null;
		if(accType.equals("saving")) {
			System.out.println("Enter Interest Rate :");
			float interestRate=sc.nextFloat();
			accobj=new SavingAccount(accNumber, accType, accBal, ifscCode, interestRate);
		}
		if(accType.equals("current")) {
			System.out.println("Enter Company Name :");
			String companyName=sc.next();
			accobj=new CurrentAccount(accNumber, accType, accBal, ifscCode, companyName);
		}
		
		Customer cobj=new Customer(custId, custName, add, accobj);
		return cobj;
	}
	
	
	
	public static void display(Account aobj) {
		System.out.println("Account Number :"+aobj.getAccNumber());
		System.out.println("Account Type  :"+ aobj.getAccType());
		System.out.println("Account Balence :"+ aobj.getAccBal());
		System.out.println("Account IFSC Code :"+ aobj.getIfscCode());
		
		if(aobj instanceof SavingAccount) {
			SavingAccount sacc=(SavingAccount)aobj;
			System.out.println("Interest Rate :"+ sacc.getInterestRate());
		}
		if(aobj instanceof CurrentAccount) {
			CurrentAccount cacc=(CurrentAccount)aobj;
			System.out.println("Company Name :"+ cacc.getCompanyName());
		}
	}

}
